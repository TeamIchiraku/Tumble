@model Tumble.Models.SingleTask
@{
    ViewBag.Title = "SingleTask";
}
<style>
    p.solid {
        border-style: solid;
        border-bottom: solid;
        border-top: solid;
        border-left: solid;
        border-right: solid;
    }
</style>
<body>
    <p class="solid">
        <h1 style="Text-align:center;">@Model.TaskName</h1>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Description">Description:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Desc" placeholder=@Model.TaskDescription name="Desc">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Date">Date:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Date" placeholder=@Model.EventDate name="Date">
            </div>
        </div>
       
        <div class="form-group">
            <label class="control-label col-sm-2" for="Reqs">Requirements:</label><br />
            <label class="checkbox-inline"><input type="checkbox" value="">@Model.Req1</label><br />
            <label class="checkbox-inline"><input type="checkbox" value="">@Model.Req2</label><br />
            <a id="AddReqs" href="" class="btn btn-primary btn-lg btn-block" role="button" style="width:12%">Add Requirement</a>
        </div>
        
        <div class="form-group">
            <label>Available Slots: @Model.NumberFilled/@Model.TotalNumber</label>
        </div>
        <div>
            <label>
                FAQ:
                <a href="~/Home/FAQ">
                    @Model.FAQDoc
                </a>
                <a id="AddDocument" href='@Url.Action("AssignTask", "Task")' class="btn btn-primary btn-lg btn-block" role="button" >Add Document</a>
            </label>
        </div>
    </p>
</body>
<a href="~/Home/Index" button type="submit" class="btn btn-default">Register</a>
<a id="singleTaskEdit" href="~/Home/Index" class="btn btn-primary btn-lg btn-default" role="button">Edit</a>

   

