@model Tumble.Models.AssignTaskModel
@{
    ViewBag.Title = "AssignTask";
}


<div class="container">
    <div class="row">
        <label class="control-label col-sm-2" for="Description">Task: </label>
        <div class="col-sm-3">
            <div class="dropdown">
                <button type="button" class="btn btn-success btn-block dropdown-toggle" data-toggle="dropdown">
                    Task Name
                </button>
                <div class="dropdown-menu">
                    <a href="#" class="dropdown-item">@Model.TaskName1</a>
                    <br />
                    <a href="#" class="dropdown-item">@Model.TaskName2</a>
                    <br />
                    <a href="#" class="dropdown-item">@Model.TaskName3</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <label class="control-label col-sm-2" for="Description">Description:</label>
        <div class="col-sm-10">
            @Model.TaskDescription
        </div>
    </div>
    <div class="row">
        <label class="control-label col-sm-2" for="Reqs">Requirements:</label>
        <div class="col-sm-4">@Model.Req1</div>
    </div>
    <div class="row">
        <label class="control-label col-sm-2" for="Reqs">Parent Volunteer: </label>
        <div class="col-sm-3">
            <div class="dropdown">
                <button type="button" class="btn btn-success btn-block dropdown-toggle" data-toggle="dropdown">
                    Parent Name
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">@Model.User1</a>
                    <br />
                    <a class="dropdown-item" href="#">@Model.User2</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <label class="control-label col-sm-2">
            FAQ:

        </label>
        <div class="col-sm-4">
            <a href="~/Home/FAQ">@Model.FAQDoc</a>
        </div>
    </div>
</div>

<a href="~/Task/Index" button type="submit" class="btn btn-default">Submit</a>